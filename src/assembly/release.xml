<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>v${pom.version}</id>
    <formats>
      <format>tar.gz</format>
      <format>zip</format>
    </formats>
    <fileSets>
      <fileSet>
        <directory>${project.basedir}</directory>
        <outputDirectory></outputDirectory>
        <includes>
            <include>README*</include>
            <include>LICENSE*</include>
            <include>NOTICE*</include>
        </includes>
      </fileSet>
      <fileSet>
        <directory>target</directory>
        <outputDirectory></outputDirectory>
        <includes>
          <include>mirtrace.jar</include>
        </includes>
      </fileSet>
      <fileSet>
        <directory>src/scripts/database_creation</directory>
        <outputDirectory>scripts/generate_custom_databases</outputDirectory>
        <includes>
          <include>fastareader.py</include>
          <include>mirtrace-db-generator.py</include>
          <include>generate-mirtrace-rnatype-database.py</include>
        </includes>
      </fileSet>
      <fileSet>
        <directory>${project.basedir}</directory>
        <outputDirectory></outputDirectory>
        <includes>
          <include>mirtrace</include>
        </includes>
      </fileSet>
      <fileSet>
        <directory>release-bundle-includes</directory>
        <outputDirectory></outputDirectory>
        <lineEnding>keep</lineEnding>
      </fileSet>
      <fileSet>
        <directory>${project.basedir}/src/lib/inputs</directory>
        <outputDirectory>reference_databases</outputDirectory>
        <includes>
          <include>*</include>
        </includes>
        <lineEnding>keep</lineEnding>
      </fileSet>
      <fileSet>
        <directory>${project.basedir}/src/main/java/se/scilifelab/mirtrace</directory>
        <outputDirectory>source_code/java</outputDirectory>
        <includes>
          <include>*java</include>
        </includes>
        <lineEnding>keep</lineEnding>
      </fileSet>
      <fileSet>
        <directory>${project.basedir}/src/main/resources/templates</directory>
        <outputDirectory>source_code/html_report</outputDirectory>
        <includes>
          <include>*</include>
        </includes>
        <lineEnding>keep</lineEnding>
      </fileSet>
      <fileSet>
        <directory>${project.basedir}/src/scripts/database_creation</directory>
        <outputDirectory>source_code/database_creation</outputDirectory>
        <includes>
          <include>*py</include>
          <include>*sh</include>
        </includes>
        <lineEnding>keep</lineEnding>
      </fileSet>
      <fileSet>
        <directory>${project.basedir}/src/lib/curated</directory>
        <outputDirectory>reference_databases</outputDirectory>
        <includes>
          <include>*</include>
        </includes>
        <lineEnding>keep</lineEnding>
      </fileSet>
    </fileSets>
</assembly>
